{
  "manifest_version": 3,
  "name": "Sticky Connections",
  "version": "1.0",
  "description": "Connect Sticky Connections (sticky.to) to the tools you already use.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://sticky.to/*",
    "http://localhost:8000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3002/*",
        "http://localhost:3003/*",

        "https://sticky.to/*",
        "https://*.sticky.to/*",

        "https://go.xero.com/*"
      ],
      "js": ["dom_hooks.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
