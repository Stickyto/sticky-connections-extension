{
  "manifest_version": 3,
  "name": "Sticky Connections",
  "version": "1.3.0",
  "description": "Payments that live where you work. Where ecomm, contactless and AI converge.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://sticky.to/*",
    "http://localhost:8000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3002/*",
        "http://localhost:3003/*",

        "https://sticky.to/*",
        "https://*.sticky.to/*",

        "https://go.xero.com/*",

        "https://qbo.intuit.com/*",

        "https://app.hubspot.com/*",
        "https://app-eu1.hubspot.com/*"
      ],
      "js": ["dom_hooks.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
